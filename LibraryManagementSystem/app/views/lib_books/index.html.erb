<p id="notice"><%= notice %></p>

<h1>Lib Books</h1>

<table>
  <thead>
    <tr>
      <th>Library</th>
      <th>Book</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lib_books.each do |lib_book| %>
      <tr>
        <td><%= Library.find(lib_book.library_id).name %></td>
        <td><%= Book.find(lib_book.book_id).title %></td>
        <td><%= lib_book.quantity %></td>
        <td><%= link_to 'Show', library_lib_book_path(@library, lib_book) %></td>
        <td><%= link_to 'Edit', edit_library_lib_book_path(@library, lib_book) %></td>
        <td><%= link_to 'Destroy', library_lib_book_path(@library, lib_book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Book To Library', new_library_lib_book_path %> |
<%= link_to 'Back', library_path(@library) %>