<!DOCTYPE html>
<html>
  <head>
    <title>LibraryManagementSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_user %>
    <%= "Logged in as #{current_user.name}" %> | <%= link_to 'Home', users_path %>
    | <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
  <% else %>
    <h3>You are not signed in!</h3>
    <%= link_to 'Home', root_path %> | <%= link_to 'Log In', new_session_path(resource_name) %> or <%= link_to 'Sign Up', new_registration_path(resource_name) %>
  <% end %>
  <hr>
  <% if alert %>
    <%= alert %>
  <% end %>
  <%= yield %>
  </body>
</html>
